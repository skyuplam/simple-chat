{
  "name": "simple-chat",
  "version": "0.1.0",
  "description": "A simple chat app",
  "main": "index.js",
  "author": "Terrence Lam <skyuplam@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint:tsc": "tsc -p . --noEmit",
    "lint:es": "eslint --ext js,ts,tsx src",
    "lint": "run-p lint:*",
    "pre-commit": "yarn lint",
    "start:server": "ts-node ./src/server.ts",
    "start:client": "parcel ./src/html/index.html",
    "start": "run-p start:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@marblejs/core": "^2.3.1",
    "@marblejs/middleware-body": "^2.3.1",
    "@marblejs/middleware-logger": "^2.3.1",
    "@marblejs/websockets": "^2.3.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.16",
    "@types/parcel-bundler": "^1.12.0",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "eslint": "^6.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
