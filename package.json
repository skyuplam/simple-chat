{
  "name": "simple-chat",
  "version": "0.1.0",
  "description": "A simple chat app",
  "main": "index.js",
  "author": "Terrence Lam <skyuplam@gmail.com>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.7.0",
    "npm": ">= 5.0.0"
  },
  "scripts": {
    "lint:tsc": "tsc -p . --noEmit",
    "lint:es": "eslint --ext js,ts,tsx src",
    "lint": "run-p lint:*",
    "test": "jest",
    "pre-commit": "yarn lint && yarn test",
    "start:server": "nodemon ./src/server.ts",
    "start:client": "parcel ./src/html/index.html",
    "start": "run-p start:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "ext": "*.ts",
    "exec": "ts-node"
  },
  "dependencies": {
    "@marblejs/core": "^2.3.1",
    "@marblejs/middleware-body": "^2.3.1",
    "@marblejs/middleware-cors": "^2.3.1",
    "@marblejs/middleware-jwt": "^2.3.1",
    "@marblejs/middleware-logger": "^2.3.1",
    "@marblejs/websockets": "^2.3.1",
    "clsx": "^1.0.4",
    "dotenv": "^8.0.0",
    "formik": "^2.0.1-rc.12",
    "immer": "^3.2.0",
    "lodash": "^4.17.15",
    "react": "^16.8.6",
    "react-app-polyfill": "^1.0.2",
    "react-dom": "^16.8.6",
    "react-modal": "^3.9.1",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-observable": "^1.1.0",
    "reselect": "^4.0.0",
    "rxjs": "^6.5.2",
    "tslib": "^1.10.0",
    "typesafe-actions": "^4.4.2",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.17",
    "@types/lodash": "^4.14.136",
    "@types/parcel-bundler": "^1.12.0",
    "@types/react": "16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/react-modal": "^3.8.2",
    "@types/react-redux": "^7.1.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "eslint": "^6.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-websocket-mock": "^1.5.0",
    "mock-socket": "^9.0.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
